rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin
    function isAdmin() {
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    match /users/{userId} {
      allow read: if true;
      
      // Allow creating a user document if the user is signed in.
      allow create: if isSignedIn();

      // Allow updating a user document if:
      // 1. The user is updating their own document.
      // 2. The user is signed in and is only updating the referral count and ticket list of another user.
      allow update: if (isSignedIn() && request.auth.uid == resource.id) || 
                       (isSignedIn() && request.writeFields.hasAll(['referralsMade', 'ticketIds']) && request.writeFields.size() == 2);
      
      allow delete: if false; // Users cannot delete their own accounts from the client
    }

    match /draws/{drawId} {
      allow read: if true;
      // Only admins can create, update, or delete draws
      allow create, update, delete: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow read: if true;
      // Allow ticket creation only if the user is signed in.
      // The server-side logic will ensure the correct userId is set.
      allow create: if isSignedIn();
      // Tickets are immutable from the client-side
      allow update, delete: if false;
    }
  }
}
