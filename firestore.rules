
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Public access for draws
    match /draws/{drawId} {
      allow read: if true;
      // Only admins should create, update, or delete draws.
      // This will be managed by server-side logic for now.
      allow write: if false; 
    }

    // Users can read public profiles, but only write to their own.
    match /users/{userId} {
      allow read: if true;
      // A user can create their own document, and can only update their own document.
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(userId);
      // Deleting users should be an admin action.
      allow delete: if false;
    }

    // Tickets can be read publicly to show winner details.
    match /tickets/{ticketId} {
      allow read: if true;
      // Users can create tickets for themselves (validated by server-side logic).
      allow create: if isSignedIn();
      // Tickets are immutable once created.
      allow update, delete: if false;
    }
  }
}
